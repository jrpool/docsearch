{
  "name": "docsearch",
  "version": "1.0.0",
  "description": "Website offering search of a repository of documents",
  "main": "src/server.js",
  "scripts": {
    "db_reset": "dropdb docsearch && createdb docsearch && npm run load_schema",
    "lint": "eslint public/*.js 'src/**/*.js'; exit 0",
    "lint_fix": "eslint --fix public/*.js src/**; exit 0",
    "load_schema_data": "psql -d docsearch < src/db/schema/schemadata.sql",
    "load_schema": "psql -d docsearch < src/db/schema/schema.sql",
    "load_test_data": "psql -d docsearch < test/seed/data.sql",
    "start": "node src/server.js",
    "start_dev": "nodemon src/server.js",
    "test": "echo 'Error: no test specified' && exit 1"
  },
  "keywords": [],
  "author": "Jonathan Pool",
  "license": "MIT",
  "dependencies": {
    "bcrypt": "^1.0.2",
    "body-parser": ">=1.18.2",
    "dotenv": ">=4.0.0",
    "ejs": ">=2.5.7",
    "express": ">=4.16.2",
    "express-session": ">=1.15.6",
    "morgan": ">=1.9.0",
    "pg": ">=7.4.0",
    "session-file-store": ">=1.1.2"
  },
  "devDependencies": {
    "nodemon": ">=1.12.1",
    "babel-preset-es2015": ">=7.0.0-beta",
    "babel-register": ">=6.26.0",
    "eslint": ">=4.11.0"
  },
  "bugs": {
    "url": "https://github.com/jrpool/docsearch.git/issues"
  },
  "homepage": "https://github.com/jrpool/docsearch.git/index.html",
  "repository": {
    "type": "git",
    "url": "https://github.com/jrpool/docsearch.git"
  },
  "babel": {
    "presets": [
      "es2015"
    ]
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "browser": true,
      "es6": true,
      "jquery": true,
      "mocha": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
      "sourceType": "module"
    },
    "rules": {
      "arrow-spacing": [
        "error",
        {
          "before": true,
          "after": true
        }
      ],
      "indent": [
        "error",
        2,
        {
          "MemberExpression": 0,
          "SwitchCase": 1
        }
      ],
      "linebreak-style": [
        "error",
        "unix"
      ],
      "no-array-constructor": [
        "error"
      ],
      "no-cond-assign": [
        "off"
      ],
      "no-control-regex": [
        "off"
      ],
      "no-console": [
        "off"
      ],
      "no-const-assign": [
        "error"
      ],
      "no-new-object": [
        "error"
      ],
      "no-var": [
        "off"
      ],
      "no-whitespace-before-property": [
        "error"
      ],
      "prefer-const": [
        "warn"
      ],
      "quotes": [
        "error",
        "single"
      ],
      "semi": [
        "error",
        "always"
      ],
      "space-before-blocks": [
        "error",
        "always"
      ],
      "space-before-function-paren": [
        "error",
        "never"
      ],
      "space-in-parens": [
        "error",
        "never"
      ],
      "space-unary-ops": [
        "error",
        {
          "words": true,
          "nonwords": false
        }
      ],
      "spaced-comment": [
        "error",
        "always",
        {
          "markers": [
            "/",
            "*"
          ]
        }
      ]
    }
  }
}
