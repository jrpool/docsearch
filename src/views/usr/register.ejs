<%- include('../util/head.ejs'); %>

    <h1>Registration</h1>

    <p>If you are not yet registered, you can register here.</p>

    <p><span class="link buttonish u1p"><a href="/">restart</a></span></p>

    <form method="post" action="/usr/register" class="form">
      <pre class="form-error"></pre>

      <label>
        <span>Your name:</span>
        <input required autofocus
          type="text" name="name"
          size="40" minlength="3" maxlength="40"
        >
      </label>
      <label>
        <span>Your email address:</span>
        <input required
          type="email" name="email"
          size="50" minlength="6" maxlength="50"
        >
      </label>
      <label>
        <span>Make password visible below?</span>
        <input type="checkbox" name="pwsee" value="yes" checked>
      </label>
      <label>
        <span>Create a password:</span>
        <input required
          type="text" name="password1"
          size="40" minlength="5" maxlength="40"
        >
      </label>
      <label>
        <span>Retype the password:</span>
        <input required
          type="text" name="password2"
          size="40" minlength="5" maxlength="40"
        >
      </label>
      <p>Your relationships to BTH:</p>
      <label>
        <input type="checkbox" name="grp-member" value="1">
        <span>member</span>
      </label>
      <label>
        <input type="checkbox" name="grp-resident" value="1">
        <span>nonmember resident</span>
      </label>
      <label>
        <input type="checkbox" name="grp-prospect" value="1">
        <span>prospective member (give details below)</span>
      </label>
      <label>
        <input type="checkbox" name="grp-manager" value="1">
        <span>manager</span>
      </label>
      <label>
        <input type="checkbox" name="grp-director" value="1">
        <span>director</span>
      </label>
      <label>
        <input type="checkbox" name="grp-treasurer" value="1">
        <span>treasurer</span>
      </label>
      <label>
        <input type="checkbox" name="grp-other" value="1">
        <span>other (describe below)</span>
      </label>
      <label>
        <span>Your unit, if you are a member or resident (format: 1 digit + 1 or 2 capital letters)</span>
        <input placeholder="1XY"
          type="text" name="unit0"
          size="3" minlength="2" maxlength="3"
          pattern="\d[A-H]{1,2}"
        >
      </label>
      <label>
        <span>Your second unit, if you have one</span>
        <input placeholder="1XY"
          type="text" name="unit1"
          size="3" minlength="2" maxlength="3"
          pattern="\d[A-H]{1,2}"
        >
      </label>
      <label>
        <span>Your title, if a manager</span>
        <input type="text" name="title" size="30" maxlength="30">
      </label>
      <label>
        <span>Additional information</span>
        <input
          type="text" name="etc"
          size="60" maxlength="90"
        >
      </label>

      <input type="submit" value="Submit">

    </form>

<%- include('../util/foot.ejs'); %>
